{
  "name": "mcbot",
  "version": "0.1.0",
  "description": "Simple mineflayer echo bot",
  "main": "bot.js",
  "scripts": {
    "start": "node scripts/bot-watch.js --takeover=true",
    "bot:watch": "node scripts/bot-watch.js --takeover=true",
    "bot:start:direct": "node bot.js",
    "dev": "nodemon",
    "test": "node --test",
    "bot:reload": "node scripts/reload-gate.js",
    "bot:restart": "node scripts/restart-bot.js",
    "interaction:hello": "node scripts/botctl.js hello",
    "interaction:list": "node scripts/botctl.js list",
    "interaction:observe": "node scripts/botctl.js observe snapshot",
    "interaction:dry": "node scripts/interaction-dry-run.js",
    "inspect:context": "node scripts/inspect-injected-context.js",
    "wt": "bash scripts/wt"
  },
  "dependencies": {
    "minecraft-data": "^3.99.1",
    "minecraft-protocol": "^1.62.0",
    "minecrafthawkeye": "^1.3.9",
    "mineflayer": "^4.33.0",
    "mineflayer-pathfinder": "^2.4.5",
    "mineflayer-simplevoice": "^1.1.1",
    "prismarine-nbt": "^2.7.0",
    "prismarine-registry": "^1.11.0",
    "protodef": "^1.19.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
